<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userProfileScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user" />

            <LinearLayout
                android:id="@+id/userInfoTextContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/userImage"
                android:orientation="vertical"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/usernameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tom Holland"
                    android:textSize="32px"
                    android:textColor="#102E50"
                    android:fontFamily="@font/roboto_bold" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tom@gmail.com"
                    android:textSize="20px"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_regular" />

                <TextView
                    android:id="@+id/editProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textSize="20px"
                    android:textColor="#BE3D2A"
                    android:fontFamily="@font/roboto_bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="24px"
                android:layout_height="24px"
                android:src="@drawable/ic_close"
                android:tint="#000000"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/menuItemHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:src="@drawable/ic_home"
                    android:tint="#000000"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="24px"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuItemSportNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:src="@drawable/ic_sports"
                    android:tint="#000000"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sport News"
                    android:textSize="24px"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuItemAcademicNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:src="@drawable/ic_academic"
                    android:tint="#000000"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Academic News"
                    android:textSize="24px"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuItemFacultyEventsNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:src="@drawable/ic_events"
                    android:tint="#000000"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faculty Events News"
                    android:textSize="24px"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuItemDevInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:src="@drawable/ic_info"
                    android:tint="#000000"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dev info."
                    android:textSize="24px"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menuItemLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:src="@drawable/ic_logout"
                    android:tint="#000000"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:textSize="24px"
                    android:textColor="#000000"
                    android:fontFamily="@font/roboto_bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>