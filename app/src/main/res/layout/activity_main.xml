<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="#F5C45E">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            android:tint="#102E50" />

        <!-- Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <!-- Image Carousel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/imageSlider"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@id/header"
        android:layout_marginTop="-40dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:paddingStart="50dp"
        android:paddingEnd="50dp" />

    <!-- TabLayout for dots indicator -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageSlider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:theme="@style/Widget.MaterialComponents.TabLayout" />


    <!-- News Title -->
    <TextView
        android:id="@+id/newsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageSlider"
        android:layout_marginTop="12dp"
        android:layout_marginStart="24dp"
        android:text="Sports"
        android:textSize="36sp"
        android:textColor="#102E50"
        android:fontFamily="@font/katibeh" />

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/newsTitle"
        android:layout_above="@id/bottomNavWrapper"
        android:layout_marginTop="8dp" />

    <!-- Bottom Navigation -->
    <RelativeLayout
        android:id="@+id/bottomNavWrapper"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/rounded_nav_black"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="12dp">

            <!-- Menu Icon -->
            <LinearLayout
                android:id="@+id/iconMenuWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iconMenu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_menu"
                    android:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Sports Icon -->
            <LinearLayout
                android:id="@+id/iconSportsWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iconSports"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_sports"
                    android:background="@drawable/white_icon_square"
                    android:padding="10dp"
                    android:tint="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/istok_web" />
            </LinearLayout>

            <!-- Academic Icon -->
            <LinearLayout
                android:id="@+id/iconAcademicWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iconAcademic"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_academic"
                    android:background="@drawable/white_icon_square"
                    android:padding="10dp"
                    android:tint="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Academic"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/istok_web" />
            </LinearLayout>

            <!-- Events Icon -->
            <LinearLayout
                android:id="@+id/iconEventsWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iconEvents"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/ic_events"
                    android:background="@drawable/white_icon_square"
                    android:padding="10dp"
                    android:tint="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Events"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/istok_web" />
            </LinearLayout>

            <!-- Home Icon -->
            <LinearLayout
                android:id="@+id/iconHomeWrapper"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iconHome"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_home"
                    android:tint="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
