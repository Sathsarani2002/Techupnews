<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#F5C45E"/> <!-- Selected: yellow -->
            <stroke android:width="1dp" android:color="#b2beb5"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Default (not selected) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Default: white -->
            <stroke android:width="1dp" android:color="#b2beb5"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
